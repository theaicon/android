<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:cacheColorHint="#00000000" android:layout_height="fill_parent"
	android:layout_width="fill_parent">

	<TextView android:id="@+id/listHeader"
		android:text="Nothing To See Here" style="@style/Large"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:gravity="center_vertical|center_horizontal" android:textStyle="bold"
		android:layout_alignParentTop="true" android:layout_centerHorizontal="true"></TextView>

	<!-- Black Line -->
	<View android:id="@+id/blackLine" android:layout_height="1dip"
		android:layout_width="fill_parent" android:layout_below="@+id/listHeader"
		android:background="#000000" android:layout_margin="4dp" />

	<!-- The List (with headers) -->
	<ListView android:id="@android:id/list" android:layout_width="fill_parent"
		android:layout_centerInParent="true"  android:layout_below="@+id/blackLine"
		android:scrollingCache="false" android:background="@android:color/transparent"
		android:cacheColorHint="#00000000" android:layout_height="fill_parent"
		android:fastScrollEnabled="true" />

	<TextView android:layout_width="wrap_content" android:id="@android:id/empty"
		android:text="Nothing To See Here" android:layout_height="wrap_content"
		android:textColor="#000000" android:layout_centerInParent="true"></TextView>

</RelativeLayout>